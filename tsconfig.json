{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "@infra/*": ["src/infra/*"],
      "@domain/*": ["src/domain/*"],
      "@shared/*": ["src/shared/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": ["node_modules"]
}